{
  "$schema": "https://pages.cloudflare.com/schemas/cloudflare-pages.config.json",
  "build": {
    "command": "npm run build",
    "output_dir": "dist",
    "environment_variables": {
      "NODE_VERSION": "20"
    }
  },
  "functions": {
    "build_dir": "backend/dist",
    "runtime": "nodejs"
  },
  "routes": [
    {
      "pattern": "/api/*",
      "destination": "/api"
    },
    {
      "pattern": "/*",
      "destination": "/index.html"
    }
  ]
}